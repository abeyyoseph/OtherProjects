<launch>
<!-- 4 wheeled robot instantiation -->
	<!-- Robot pose -->
	<arg name="x" default="0"/>
	<arg name="y" default="3.0"/>
	<arg name="z" default="0"/>
	<arg name="roll" default="0"/>
	<arg name="pitch" default="0"/>
	<arg name="yaw" default="0"/>
	<arg name="robot_name" default="atom"/>

	<!-- Launch other relevant files-->
	<arg name="model" value="$(find atom)/urdf/atom.xacro"/>

	<group ns = "wheeled_robot">
		<param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
	
		<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
			<param name="use_gui" value="false"/>
		</node>

		<node pkg="robot_state_publisher" type="robot_state_publisher" name="wheeled_robot_state_publisher" output="screen">
			<param name="publish_frequency" type="double" value="50.0" />
			<param name="tf_prefix" value="wheeled_robot" />
		</node>
	
		<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model wheeled_robot1 
		-x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />
	</group>
</launch>
